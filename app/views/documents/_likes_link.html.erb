<% if document.liked_by?(current_user) %>
  <%= link_to "Unlike", like_document_path(document, vote: "unlike"), method: 'patch', remote: true, class: 'btn unlike-btn' %>
<% else %>
  <%= link_to "Like", like_document_path(document, vote: "like"), method: 'patch', remote: true, class: 'btn like-btn' %>
<% end %>
